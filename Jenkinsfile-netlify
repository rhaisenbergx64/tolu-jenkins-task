pipeline {
    agent any

    environment {
        BUILD_VERSION = "1.0.$BUILD_ID"
        NETLIFY_SITE_ID = '4b2a17d2-94c5-4661-ad99-d82075201d9d'
        NETLIFY_AUTH_TOKEN = credentials('new-netlify-token')
        NODE_IMAGE_VERSION = '18-alpine'
    }

    stages {

        stage("Build ") {
            agent {
                docker {
                    image "node:${NODE_IMAGE_VERSION}"
                    reuseNode true
                    args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh '''
                ls -la
                node --version
                npm --version
                npm ci
                npm run build
                echo "Build completed with version: $BUILD_VERSION"
                '''
            }
        }

        stage('Deploy to Netlify') {
            agent {
                docker {
                    image "node:${NODE_IMAGE_VERSION}"
                    reuseNode true
                    args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh '''
                npm install netlify-cli
                echo "Deploying to production. Site ID: $NETLIFY_SITE_ID"
                node_modules/.bin/netlify status
                node_modules/.bin/netlify build
                node_modules/.bin/netlify deploy --dir=build --prod
                '''
            }
        }
        
    }
}